<div class="container">
  <div class ="row">
    <div class="col-sm-8 p-2">
      <%= image_tag @image.picture, style: "max-width: 100%; max-height: 100%;" %>
    </div>
    <div class="col-sm-4 p-2">
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" href="#collapse1">Show comments </a>
            </h4>
          </div>
          <div id="collapse1" class="panel-collapse collapse">
            <%= render 'comments/index', comments: @image.comments %>
            <%= render 'comments/form', comment: @image.comments.new %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<%= @image.description %>
<div class ="right">
  <% if @image.next %>
    <%= link_to "", context_image_path(@image.next.context , @image.next), class: "oi oi-arrow-right", style: 'right', remote: true %>
  <% end %>
</div>
<div align ="left">
  <% if @image.previous %>
    <%= link_to "", context_image_path(@image.previous.context , @image.previous), class: "oi oi-arrow-left", remote: true %>
</div>
  <% end %>
